{
  "mcpServers": {
    "notion": {
      "command": "uvx",
      "args": ["mcp-server-notion"],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "notion_search",
        "notion_create_page",
        "notion_update_page",
        "notion_append_block"
      ]
    }
  }
}
